[tox]
skipsdist=True
requires=tox-venv

[gh-actions]
python =
    3.7: py37
    3.8: py38
    3.9: py39

[pytest]
asyncio_mode=auto

[testenv]
deps=-r{toxinidir}/requirements.txt
     -r{toxinidir}/test-requirements.txt
	 {toxinidir}

commands=
  bash -c "cd {toxinidir}/tests/ && make ORGANIZATION={posargs} .runcass .runts"
  {{^useNose}}pytest -k tag -x --cov={{{pythonSrcRoot}}}{{{packageName}}}{{/useNose}}{{#useNose}}nosetests{{/useNose}}
