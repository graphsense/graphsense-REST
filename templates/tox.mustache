[tox]
envlist = {{#supportPython2}}py27, {{/supportPython2}}py36
skipsdist=True
requires=tox-venv

[testenv]
deps=-rrequirements.txt
     -rtest-requirements.txt

commands=
  bash -c "cd {toxinidir}/tests/ && make .runtest"
  {{^useNose}}pytest --cov={{{pythonSrcRoot}}}{{{packageName}}}{{/useNose}}{{#useNose}}nosetests{{/useNose}}
