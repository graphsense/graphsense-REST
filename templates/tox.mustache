[tox]
skipsdist=True
requires=tox-venv

[gh-actions]
python =
    3.7: py37
    3.8: py38
    3.9: py39

[testenv]
deps=-r{toxinidir}/requirements.txt
     -r{toxinidir}/test-requirements.txt
	 {toxinidir}

commands=
  bash -c "cd {toxinidir}/tests/ && make .runtest"
  {{^useNose}}pytest -x -k "list_block_txs" --cov={{{pythonSrcRoot}}}{{{packageName}}}{{/useNose}}{{#useNose}}nosetests{{/useNose}}
